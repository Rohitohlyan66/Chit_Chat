<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="center"
    android:padding="8dp"
    tools:context=".StartActivity">

    <TextView
        android:id="@+id/start_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Welcome to \n   Chit Chat"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/start_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_text"
        android:layout_marginTop="50dp"
        android:background="@drawable/start_button_bg"
        android:text="Need a new Account?"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/start_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_register"
        android:layout_marginTop="20dp"
        android:background="@drawable/start_button_bg"
        android:text="Already have an Account"
        android:textSize="16sp"
        android:textStyle="bold" />


</RelativeLayout>